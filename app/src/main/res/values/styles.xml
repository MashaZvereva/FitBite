<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Тема приложения -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основной цвет для кнопок -->
        <item name="colorPrimary">@color/button_background</item>
        <item name="colorPrimaryDark">@color/button_background</item>
        <item name="colorAccent">@color/button_background</item>

        <!-- Применяем стиль для кнопок -->
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Стиль кнопки -->
    <style name="CustomButtonStyle">
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.Theme.FitBite.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item> <!-- или больше -->
        <item name="android:textStyle">bold</item>
    </style>

</resources>

